<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Model Input Configuration</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href=".\styles\devModel-page.css">
  <script src="https://cdn.jsdelivr.net/npm/lucide@0.263.0/dist/umd/lucide.min.js"></script>
</head>
<body class="bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto py-6 max-w-4xl">
    <header class="flex justify-between items-center mb-8">
      <div>
        <h1 id="model-name" class="text-3xl font-bold dark:text-white">Text Generation Model</h1>
        <div class="flex items-center mt-2">
          <span class="text-sm text-gray-500 dark:text-gray-400 mr-2">Deployment URL:</span>
          <code id="deployment-url" class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-sm dark:text-gray-200">https://api.modelmarket.ai/models/text-gen-v1</code>
          <button id="copy-url-btn" class="ml-2 p-1 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
            <i data-lucide="copy" class="h-4 w-4"></i>
          </button>
        </div>
      </div>
      <div>
        <button id="theme-toggle" class="p-2 rounded-md bg-gray-200 dark:bg-gray-700">
          <i data-lucide="sun" class="h-5 w-5 hidden dark:block dark:text-gray-200"></i>
          <i data-lucide="moon" class="h-5 w-5 block dark:hidden"></i>
        </button>
      </div>
    </header>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
      <div class="border-b border-gray-200 dark:border-gray-700 px-6 py-4">
        <h2 class="text-xl font-semibold dark:text-white">Model Input Parameters</h2>
      </div>
      <div class="p-6">
        <div id="parameters-container" class="space-y-4">
          <!-- Parameters will be inserted here dynamically -->
        </div>
        
        <button id="add-parameter-btn" class="mt-6 w-full flex items-center justify-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm font-medium text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
          <i data-lucide="plus" class="mr-2 h-4 w-4"></i>
          Add Parameter
        </button>
      </div>
    </div>

    <!-- Toast notification -->
    <div id="toast" class="fixed bottom-4 right-4 hidden bg-gray-800 text-white px-4 py-2 rounded-md shadow-lg">
      URL Copied!
    </div>
  </div>

  <script src="devModel.js"></script>
</body>
</html>